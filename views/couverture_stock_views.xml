<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_couverture_stock_tree" model="ir.ui.view">
        <field name="name">couverture.stock.tree</field>
        <field name="model">couverture.stock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_name"/>
                <field name="product_barcode"/>
                <field name="total_en_stock"/>
                <field name="total_vendu"/>
                <field name="vmj"/>
                <field name="couverture_stock_en_jours"/>
                <field name="marge_livraison"/>
                <field name="couverture_cible"/>
                <field name="qte_a_commander"/>
                <field name="company_name"/>

            </tree>
        </field>
    </record>

    <record id="action_couverture_stock" model="ir.actions.act_window">
        <field name="name">Couverture Stock</field>
        <field name="res_model">couverture.stock</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="context">{}</field>
    </record>

    <!--<menuitem id="menu_action_couverture_stock" name="Rapport de Couverture"
              parent="menu_kaderim_couverture"
              action="action_couverture_stock"/>-->
</odoo>
